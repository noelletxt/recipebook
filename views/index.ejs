<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Recipe Book</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Recipe book</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/addrecipe">Add new recipe</a>
                    </li> 
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <br>
        <div class="text-center"><h2>Recipes saved</h2></div>
        <br>
        <table class="table table-hover small text-center">
            <thead>
                <tr>
                    <th width="100">Name</th>
                    <th width="100">Image</th>
                    <th width="100">Edit</th>
                    <th width="100">Delete</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < recipelist.length; i++) { %>
                    <tr>
                        <td><a href="/recipe/<%= recipelist[i].recipeid %>"><%= recipelist[i].name %></a></td>
                        <td><img src="images/<%= recipelist[i].image %>" width="20%"></td>
                        <td><a href="/editrecipe/<%= recipelist[i].recipeid %>">Edit</a></td>
                        <td><a href="/deleterecipe/<%= recipelist[i].recipeid %>" onclick="return confirm('Are you sure you want to delete this recipe?')">Delete</a></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
